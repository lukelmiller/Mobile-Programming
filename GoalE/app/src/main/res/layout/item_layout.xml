<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/etItemTitle"
        android:layout_width="228dp"
        android:layout_height="138dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_weight="4"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/etItemProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/etItemProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="146dp"
        android:layout_weight="1"
        android:indeterminateOnly="false"
        android:progress="80"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/etProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="60%"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="@+id/etItemProgress"
        app:layout_constraintEnd_toEndOf="@+id/etItemProgress"
        app:layout_constraintStart_toStartOf="@+id/etItemProgress"
        app:layout_constraintTop_toTopOf="@+id/etItemProgress"
        />

</androidx.constraintlayout.widget.ConstraintLayout>